{
  "extends": [
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ],
    "no-unused-expressions": "off",
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "prefer-destructuring": "off",
    "no-plusplus": "off",
    "no-loop-func": "off",
    "no-await-in-loop": "off",
    "no-continue": "off"
  },
  "env": {
    "mocha": true
  }
}
